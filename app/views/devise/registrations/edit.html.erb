<h2>パスワード変更</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>（変更するには現在のパスワードが必要です）</i><br />
    <%= f.password_field :current_password, :placeholder => "現在のパスワード", autocomplete: "current-password" %>
  </div><br>

  <div class="field">
    <%= f.label :変更したいパスワード %> <i>（変更しない場合は空欄のままにしてください）</i><br />
    <%= f.password_field :password, :placeholder => "6文字以上", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div><br>

  <div class="field">
    <%= f.label :変更したいパスワード %><i>（確認）</i><br />
    <%= f.password_field :password_confirmation, :placeholder => "変更後パスワード確認", autocomplete: "new-password" %>
  </div><br>



  <div class="actions">
    <%= f.submit "パスワード変更", class: "btn-gradient-2d-simple" %>
  </div><br>
<% end %>

<%= link_to :back do %>
  <button class="btn-info">戻る</button>
<% end %>
