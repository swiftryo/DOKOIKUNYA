<div class="containre">
	<div class="row">
		<div class="col-xs-12">
			<h2>詳細</h2>
			<div class="col-xs-6">
				<h4>画像</h4>
				<%= attachment_image_tag @product, :image, :fill, 500, 500, size: "300x300", format: 'jpeg', fallback: "no_data.jpg" %>
			</div>
			<div class="col-xs-3">
				<h4>場所の名前</h4>
				<%= @product.name %>
				<!-- お気に入り -->
				<td>
            		<div id="favorites_buttons_<%= @product.id %>">
						<%= render partial: 'favorites/favorite', locals: { product: @product} %>
          			</div>
          		</td>
				<h3>場所の説明</h3>
				<%= @product.introduction %>
				<h3>登録日</h3>
				<%= @product.created_at.strftime('%Y/%m/%d') %>
				<h3>住所</h3>
				<%= @product.prefecture_code %>
				<%= @product.city %>
				<%= @product.street %>
				<h3>現在の状況</h3>
				<% if @product.status? %>
					現在もあります
				<% else %>
					現在はもうありません
				<% end %><br><br>
				<p>
					<%= link_to "場所編集", edit_product_path(@product), class:"btn btn-primary" %>
					<%= link_to "場所削除", product_path(@product), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
				</p>
			</div>
			<!-- 星レビュー -->
			<div class="card-content">
				<div class="content average-score">
					<div class="star-rating">
						<div class="star-rating-front" style="width: <%= @product.review_score_percentage %>%">★★★★★</div>
						<div class="star-rating-back">★★★★★</div>
					</div>
					<div class="average-score-display">
						<%= link_to product_reviews_path(@product) do %>
						<%= @product.avg_score %>点 (<%= @product.reviews.count %>件のレビュー)
						<% end %>
					</div>
				</div>
			</div><br>

			<%= render 'reviews/form', review: @review, product: @product %>
			<%= link_to "お気に入りした人", product_favorites_path(@product), class:"btn btn-info" %>
		</div>
	</div>
</div>

<%= link_to :back do %>
  <button class="btn-info">戻る</button>
<% end %>