<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-2">
       <%= f.label :メールアドレス %><br />
     </div>
     <div class="col-xs-7">
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       <button type="button" class="btn btn-default" data-toggle="popover" data-animation="true" title="メールアドレスを入力" data-content="登録済みのメールアドレスを入力してください。">
         <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
       </button>
    </div>
   </div>

<div class="row">
  <div class="col-xs-3 col-xs-offset-2">
    <%= f.label :パスワード %><br />
  </div>
  <div class="col-xs-7">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
</div>

<% if devise_mapping.rememberable? %>
<div class="row">
  <div class="col-xs-3 col-xs-offset-5">
  <%= f.check_box :remember_me %>
  <%= f.label :ログインしたままにする %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="actions col-xs-5 col-xs-offset-7">
  <%= f.submit "ログイン", class: "btn btn-success" %>
  </div>
<% end %>
</div>

<div class="row">
  <div class="col-xs-offset-9">
    <h4>初めてご利用ですか？</h4>
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "新規登録こちらは", new_registration_path(resource_name), class: "btn btn-info" %><br />
    <% end %>
  </div>
</div>


