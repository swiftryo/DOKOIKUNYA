<h2>お気に入り一覧</h2>

<% @favorites.each do |favorite| %>
	<% product = Product.find(favorite.product_id) %>
	<li><%= link_to product.name, product_path(product) %></li>
	<div><%= link_to "お気に入りから削除", product_favorites_path(product), method: :delete, remote: true, id: :"js-favorite-button-for-product-#{product.id}" %></div><br>

<% end %>