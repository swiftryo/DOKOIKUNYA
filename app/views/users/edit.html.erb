<h2 class="text-center">登録情報編集</h2>

<%= form_for(@user) do |f| %>
<% if current_user.id == 3 %>
<h1 class="text-center">ゲストユーザーの編集はご遠慮ください。</h1>
<% else %>
  <div class="container">
   <div class="row">
      <div class="col-xs-3 col-xs-offset-3"><%= f.label :名前 %></div>
      <div class="col-xs-6"><%= f.text_field :name %></div>
   </div><br>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-3"><%= f.label :メールアドレス %></div>
      <div class="col-xs-6"><%= f.text_field :email %></div>
    </div><br>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-3"><%= f.label :自己紹介 %></div>
      <div class="col-xs-6"><%= f.text_area :biography %></div>
    </div><br>

    <div class="row">
      <div class="col-xs-3 col-xs-offset-3"><%= f.label :都道府県 %></div>
      <div class="col-xs-6"><%= f.select :prefecture_code, User.prefecture_codes.keys, {} %></div>
    </div><br>

    <div class="actions col-xs-5 col-xs-offset-7">
      <%= f.submit "変更を保存する", class: "btn-gradient-2d-simple mb-2" %>
    </div>
<% end %>
<% end %> 
  </div>